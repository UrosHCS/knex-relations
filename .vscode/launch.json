  "version": "0.2.0",
  "configurations": [
      {
          "name": "Debug tests",
          "type": "node",
          "request": "launch",
          "runtimeArgs": [
              "-r",
              "ts-node/register",
              "tests",
              "--inspect-brk",
          ],
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen",
          "skipFiles": [
              "<node_internals>/**",
              "${workspaceRoot}/node_modules/**"
          ],
      }
  ]
}