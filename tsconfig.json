{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "lib": ["ES2021"],
    "module": "commonjs",
    "target": "ES2021",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "incremental": true,
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "noImplicitOverride": true
  },
  "exclude": ["tests"],
}
